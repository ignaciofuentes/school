<%= content_for :breadcrumb do%>
	<%= link_to 'Timetable', :controller=>"timetable" %> &raquo; <%= link_to 'Schedules', schedules_path %> &raquo; Edit
	<% end %>

	<div class="container_12">
		<div class="grid_1">
			<img src="/images/examination/show_exam.png" alt="Exam" />
		</div>
		<div class="grid_9">
			<h1>Schedules</h1>			
		</div>
		<div class="grid_2">
			<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
		</div>	
	</div>

	<div class="clearfix">&nbsp;</div>

	<div class="container_12">
		<h2>Edit</h2>

		<% unless flash[:notice].nil? %>
		<%= render "shared/highlighted_messages", :msg=> flash[:notice]%>
		<% end %>

		<%= form_for (@schedule) do |f| %>

		<%= render 'shared/error_messages', :target => @schedule %>
		<%= f.label :name %>
		<%= f.text_field :name, :class=>"text" %>
		<%= submit_tag "", :value => "â–º Save", :class => "submit" %>

		<% end %>
	</div>
</div>
