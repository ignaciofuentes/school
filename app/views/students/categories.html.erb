<div class="container_12">
	<div class="grid_1">
		<img src="/images/show_settings.png" />
	</div>
	<div class="grid_9">
		<h1>Students</h1>
	</div>
	<div class="grid_2">
		<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
	</div>	
</div>

<div class="clearfix">&nbsp;</div>

<h2>Categories</h2>

<div class="container_12">
	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>

	<%= form_for :student_category, :url => {:action => 'categories'} do |f| %>
	<div class="grid_6">
		<p>
			<label> Enter new Category : </label>
			<%= f.text_field :name, :value => '', :class=>"text" %>
		</p>
	</div>
	<div class="clearfix">&nbsp;</div>
	<div class="grid_6">
	<%= submit_tag "", :value => "â–º Save", :class => "submit" %>
	</div>
	<% end %>
</div>
<div class="clearfix">&nbsp;</div>


<table>
	<thead>
		<tr>
		</tr>
	</thead>
  	<tbody>
      <% @student_categories.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= link_to 'Edit', { :action => 'category_edit', :id => c.id }, :remote=>true %> </td>
<td><%= link_to 'Remove', { :action => 'category_delete', :id => c.id }, :remote=>true %></td>
      </tr>
     <% end %>
<tbody>
  
</table>


</div>
