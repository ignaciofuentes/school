<%= javascript "loader"%>

<%= content_for :breadcrumb do%>
<%= t"students.students" %>
<% end %>

<div class="container_12">
	<div class="grid_1">
		<%= image_tag("menu_icons/students_search.png") %>
	</div>
	<div class="grid_9">
		<h1><%= t"students.students" %></h1>
	</div>
	<%= render :partial => 'shared/back_button' %>
</div>


<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<h2><%= t"general.search" %></h2>

	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> 
		<%= flash[:notice] %>
	</p> 
	<% end %>
	<%= form_for @search, :method=>:get, :remote=>true do |f|%>
	<div class="grid_6">
		<p>
			<%= f.label :first_name_or_last_name_or_middle_name_contains, "Name" %>
			<br />
			<%= f.text_field :first_name_or_last_name_or_middle_name_contains, :class=>"text" %>
		</p>
		</div>
		<div class="grid_6">
		<p>
			<%= f.label :unique_id_equals, "Cedula" %>
			<br />
			<%= f.text_field :unique_id_equals, :class=>"text" %>
		</p>
	</div>
	<div class="grid_2">
		<%= f.submit t("general.search"), :class=>"submit" %>	


		<%end%>
	</div>
	<div class="grid_2">
		<%= image_tag("ajax-loader-blue.gif",
		:align => "absmiddle",
		:border => 0,
		:id => "loader",
		:class=>"hidden" ) %>
	</div>
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<h2><%= t"students.search_results" %></h2>
	<div id="information">
	</div>
</div>
