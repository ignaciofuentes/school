<%= content_for :breadcrumb do%>
 <%= link_to @batch.full_name, @batch %> &raquo;
<% end %>

<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/courses.png" %>
	</div>
	<div class="grid_9">
		<h1><%= @batch.name %></h1>
	</div>
	<%= render :partial => 'shared/back_button' %>	
</div>

<div class="clearfix">&nbsp;</div>


<div class="container_12">
	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>

	<% unless flash[:warn_notice].nil? %>
	<div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
	<% end %>


	<div class="grid_12">
		<h2>Grades</h2>
		<%=form_tag assign_batch_transfer_batch_path() %>
		<%= label_tag "Select batch to transfer"%>
		<%= collection_select "Batch", "id", Batch.all, :id, :full_name%>
			<table class="large">		
				<thead>
					<tr>
						<th>name</th>
						<th>Transfer Batch</th>
					</tr>
				</thead>
				<tbody>
					<% @batch.students.each do |student|%>
					<tr>
					<td><%= student.full_name%></td>
					<td>
					<%= check_box_tag :student_ids, student.id, false, :name => 'Student_ids[]' %>
					</td>
					</tr>
					<%end%>
				</tbody>
			</table>
			<%=submit_tag "Transfer Students"%>
			</form>
	</div>
</div>

