<%= content_for :breadcrumb do%>

	<%=  %>

	<% end %>

	<div class="container_12">
		<div class="grid_1">
			<%= image_tag "menu_icons/courses.png" %>
		</div>
		<div class="grid_9">
			<h1>Historico</h1>
		</div>
		<%= render 'shared/back_button' %>	
	</div>

	<div class="clearfix">&nbsp;</div>

	<div class="container_12">
		<% unless flash[:notice].nil? %>
		<%= render "shared/highlighted_messages", :msg=> flash[:notice]%>
		<% end %>


		<% unless flash[:warn_notice].nil? %>
		<%= render "shared/highlighted_messages", :msg => flash[:warn_notice] %> 
		<% end %>

		<div class="grid_3" id="menu_small">
			<h2><%= t"general.options"%>:</h2>
			<ul>
				<li><%= link_to "Add Batch", new_student_batch_student_path(@student)%></li>
			</ul>
		</div>

		<div class="grid_9">

			<h2 class="center"> <%= t"batches.batches" %> <%= @student.full_name %></h2>
			<table class="medium">
				<thead>
					<tr>
						<th>
							<%= t"batches.batch_name" %>
						</th>
						<th>Delete</th>
					</tr>
				</thead>
				<% @student.batch_students.each do |bs| %>
				<tr>
					<td><%= link_to bs.batch.full_name, final_grades_student_path(@student, :batch_id=> bs.batch_id) %></td>
					<td><%= link_to(t("general.delete"), [@student,bs], :method => :delete, :confirm => 'Are you sure?') %></td>
				</tr>
				<% end %>

			</table>
		</div>
	</div>
