<%= content_for :head do%>
<script type="text/javascript" charset="utf-8">
	$(function(){
		$('input:radio').change(function(){
			$("#cualitative, #numeric").toggle();
		});
		<% if(@evaluation_structure.numeric?)%>
		$("#cualitative").hide();
		<% else %>
		$("#numeric").hide();
		<%end%>
	})
</script>
<%end%>
<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/timetable.png" %>
	</div>
	<div class="grid_9">
		<h1>Evaluation Structure</h1>
	</div>
	<%= render :partial => 'shared/back_button' %>
	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>	
</div>
<div class="clearfix">&nbsp;</div>

	<%= render "form", :form_name=>"New Evaluation Structure", :checked=>true%>
	
