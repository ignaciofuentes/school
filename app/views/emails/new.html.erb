<%= content_for :breadcrumb do%>

<%= link_to t("courses.courses_title"), courses_path %> &raquo; <%= link_to @batch.course.full_name, @batch.course %> &raquo; <%= link_to @batch.full_name, @batch %>

	<% end %>

	<div class="container_12">
		<div class="grid_1">
			<%= image_tag "menu_icons/courses.png", :id=>"menu_icon" %>
		</div>
		<div class="grid_9">
			<h1>Email</h1>
		</div>
		<%= render :partial => 'shared/back_button' %>	
	</div>

	<div class="clearfix">&nbsp;</div>

	<div class="container_12">
		<% unless flash[:notice].nil? %>
		<%= render "shared/highlighted_messages", :msg=> flash[:notice]%>
		<% end %>

		<% unless flash[:warn_notice].nil? %>
		<%= render "shared/highlighted_messages", :msg => flash[:warn_notice] %> 
		<% end %>
		<h2>New email for <%= @batch.full_name %></h2>
		<%= render 'form' %>
	
	</div>

