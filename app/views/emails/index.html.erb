<h1>Listing emails</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Content</th>
    <th>Guardians</th>
    <th>Students</th>
    <th>Employees</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.subject %></td>
    <td><%= email.content %></td>
    <td><%= email.guardians %></td>
    <td><%= email.students %></td>
    <td><%= email.employees %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

