<div id="wrapper">
  <div id="top_logo">
    <% if FileTest.exists?("#{::Rails.root.to_s}/public/uploads/image/institute_logo.jpg") %>
      <%= image_tag  "/uploads/image/institute_logo.jpg" ,:width => "155",  :height=>"107" %>
    <% else %>

    <img src="/images/manzanita.png"/>
    <% end %>
  </div>

  <div id="help_top">
    
  </div>

  <div id="login_area_bg">

    <%= form_for :user do |form| %>

      <div id="login_area">
        <label for="username"><%= t "login.username" %></label>
        <div id="username_textbox_bg">
          <%= form.text_field :email,
            :maxlength => 40%>
        </div>

        <label for="password">Password</label>
        <div id="password_textbox_bg">
          <%= form.password_field :password %>
        </div>

        <div id="checkbox_area">
          <input type="checkbox" id="remember" />
          <label for="remember">Remember me</label>
        </div>

        <div id="submit_area">
          <%= submit_tag "Login", :class => "submit" %>
        </div>


        <% if !flash.empty? %>
          <div id="notice"><%= flash[:notice] %></div>
        <% end %>

      </div>
    </div>
  <% end %>
  <div id="help_forgot_pw">
    <%= link_to "Help! I've Forgotten my Password?",
      :controller => "user",
      :action => "forgot_password" %>

</div>
<div class="clearfooter"></div>
</div>

