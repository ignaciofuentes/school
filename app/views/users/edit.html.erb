<%= content_for :breadcrumb do%>
<%= link_to @user.username, :controller=>"users", :action=>"profile", :id =>@user.id %> &raquo; Edit
<% end %>
<div class="container_12">
	<div class="grid_1">
		<img src="/images/edit_users/edit_users_logo.jpg" />
	</div>
	<div class="grid_9">
		<h1>Edit User</h1>
		<% if @current_user.admin? and @current_user.id != @user.id %>
		<h3>
			<%= link_to "Change Password", :controller => "user", :action => "user_change_password", :id =>@user.username %>
		</h3>
		<% end %>
	</div>
	<div class="grid_2">
		<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
	</div>	
</div>

<div class="clearfix">&nbsp;</div>


<div class="container_12">

	<% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
		<%= render 'shared/error_messages', :target => @user %>

<h2>Update user information</h2>
	<%= form_for (@user) do |f| %>

	<div id="necessary-field-notification"> Fields marked with <span class="necessary-field">*</span> must be filled.</div>

	<div class="grid_6">
		<p>
			<label for="user_email">Email <span class="necessary-field">*</span></label>
			<%= f.text_field :email, :class=>"text" %>
		</p>
	</div>
	<div class="grid_6">
		<p>
			<label for="user_email">Language <span class="necessary-field">*</span></label>
			<%= f.collection_select :language_id, Language.all, :id, :name%>
		</p>
	</div>
<div class="clearfix">&nbsp;</div>
	<%= f.submit "", :value => "â–º Update", :class => "submit" %>
</div>


<% end  %>

</div>