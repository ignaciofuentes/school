<%= javascript "loader"%>
<%= content_for :breadcrumb do%>
Users
<% end %>

<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/manage_users.png" %>
	</div>
	<div class="grid_9">
		<h1>Manage Users</h1>
	</div>
	<%= render :partial => 'shared/back_button' %>	
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<div class="grid_4" id="menu_small">
		<h2><%= t"general.options" %></h2>
		<ul>
			<li><%= link_to "Add new",new_user_path%></li>
		</ul>
	</div>

	<div class="grid_8">
		<h2><%= t"general.search" %></h2>
		<%= form_for @search, :method=>:get, :remote=>true do |f|%>

		<%= image_tag("ajax-loader-blue.gif",
