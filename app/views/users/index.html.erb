		<%= f.text_field :authenticatable_student_type_first_name_or_authenticatable_student_type_last_name_or_authenticatable_employee_type_first_name_or_authenticatable_employee_type_last_name_or_authenticatable_guardian_type_first_name_or_authenticatable_guardian_type_last_name_contains, :class =>"text small" %>
<div class="clearfix">&nbsp;</div>
<div class="clearfix">&nbsp;</div>
		<div class="grid_4 push_6">
			<%= f.submit t("general.search"), :class=>"submit" %>		
		</div>
		<%end%>
	</div>
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<h2><%= t"users.search_results" %></h2>
	<div id="information">
	</div>
</div>