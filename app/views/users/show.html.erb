<div class="container_12">
	<div class="grid_1">
		<img src="/images/user_profile/user_profile_logo.jpg" />
	</div>
	<div class="grid_9">
		<h1>User Profile</h1>
	</div>
	<div class="grid_2">
		<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
	</div>	
</div>

<div class="clearfix">&nbsp;</div>

<div class="container_12">

	<div class="grid_3" id="menu_small">
		<h2>Options:</h2>
			<ul>
		<% if @current_user.id == @user.id %>
			<li>
				<%= link_to "Change Password", :controller => "user", :action => "change_password" %>
			</li>
		<% end %>
	
		
		<li>
		<%= link_to "View profile",{:controller => "employee", :action => "profile", :id => @user.authenticatable.id } unless @user.authenticatable.nil?%>
		</li>

		<li>
		<%= link_to "Edit",{:controller => "users", :action => "edit", :id => @user.id }%>
		</li>
	
		<li>
		<%= link_to "Delete", { :controller => "users", :action => "delete", :id => @user.username}, :confirm=>"Are you sure you want to delete this USER?" %>
		</li>
	
		<li>
		<%= link_to "Edit Role", {:controller => "users", :action => "edit_privilege", :id => @user.username } %>
		</li>
	
		</ul>
	</div>


	<div class="grid_9">

		<h2>User Information:</h2>
		<% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

		<div class="grid_3 alpha">
			<h3>Username</h3>
			<%= @user.username %>
		</div>

		<div class="grid_3">
			<h3>Email</h3>
			<%= @user.email %>
		</div>

		<div class="grid_3 omega">
			<h3>Languange</h3>
			<%= @user.language.name %>
		</div>

	</div>

</div>
