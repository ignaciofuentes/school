<%= content_for :breadcrumb do%>

<% end %>

<div class="container_12">
	<div class="grid_1">
		<img src="/images/show_settings.png" />
	</div>
	<div class="grid_9">
		<h1>Grades for <%= @batch_subject.subject.name %></h1>
	</div>
	<div class="grid_2">
		<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
	</div>	
</div>

<div class="clearfix">&nbsp;</div>


<div class="container_12">
	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>

	<% unless flash[:warn_notice].nil? %>
	<div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
	<% end %>

	<div class="grid_12">
		<h2>Grades</h2>
		<div class="clearfix">&nbsp;</div>
		<div class="clearfix">&nbsp;</div>
		<div class="clearfix">&nbsp;</div>
		<div class="clearfix">&nbsp;</div>
		<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
		<table id ="grades">	
			<thead>
				<tr style="line-height: 200px">
					<th><div>Student Name</div></th>
					<% @evaluations.each do |evaluation|%>
					<th class="rotate"><div><%= evaluation.name %> (<%= evaluation.percentage%> %) </div></th>
					<% end %>
					<th><div>Definitiva</div></th>
				</tr>
			</thead>
			<tbody>
				<% @students.each do |student|%>
				<tr>
					<td class="names"><%= student.full_name %></td>
					<% @evaluations.each do |evaluation|%>
					<td>
						<% grade = student.grades.for_evaluation(evaluation) 
						if grade.exists? %>
						<%= grade.first.value%>
						<% end %>
					</td>
					<% end %>
					<td></td>
				</tr>
				<% end %>
			</tbody>
		</table>


	</div>
</div>

