<%= content_for :breadcrumb do%>
<%= link_to 'Settings', :controller=>"configuration" %> &raquo; <%= link_to t("courses.courses_title"), courses_path %> &raquo; <%= link_to @course.full_name, @course %> &raquo; <%= link_to @batch.full_name, @batch %> &raquo; Sub
<% end %>

<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/courses.png" %>
	</div>
	<div class="grid_9">
		<h1><%= @batch.name %></h1>
	</div>
	<%= render :partial => 'shared/back_button' %>	
</div>

<div class="clearfix">&nbsp;</div>


<div class="container_12">
	<% unless flash[:notice].nil? %>
	<p class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>

	<% unless flash[:warn_notice].nil? %>
	<div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
	<% end %>

	<div class="grid_3" id="menu_small">
		<h2><%= t"general.options"%>:</h2>
		<ul>
			<%= render 'batches/batch_options' %>
		</ul>
	</div>

	<div class="grid_9">
		<table class="medium">
			<h2><%= t("batches.subjects")%></h2>
			<thead>
				<tr>
					<th><%= t"general.name"%></th>
					<th>Porcentaje Evaluado</th>
				</tr>
			</thead>
			<tbody>
				<% @slno = 0 %>
				<% @batch_subjects.each do |batch_subject| %>
				<tr class="tr-<%= cycle('odd', 'even')%>">
					<td class="col-2"><%= link_to batch_subject.subject.name, batch_batch_subject_path(@batch, batch_subject) %></td>
					<td> </td>
				</tr>
				<% end %>
			</tbody>
		</table>


	</div>
</div>

