<%= content_for :breadcrumb do%>
Employees &raquo; Search
<% end %>
<div class="container_12">
	<div class="grid_1">
		<img src="/images/HR/show_hr.png" alt="" />
	</div>
	<div class="grid_9">
		<h1>Employees</h1>
	</div>
	<div class="grid_2">
		<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
	</div>	
</div>

<div class="clearfix">&nbsp;</div>

<div class="container_12">

	<div class="grid_4" id="menu_small">
		<h2>Options</h2>
		<ul>
			<li><%= link_to "View all", :controller=>"employee", :action=>"view_all" %></li>
			<li><%= link_to "Advanced", :controller=>"employee", :action=>"advanced_search"%></li>
		</ul>
	</div>

	<div class="grid_8">
		<h2>Search</h2>
		<div class="grid_4 alpha">
		
		<% unless flash[:notice].nil? %>
		<p class="flash-msg"> 
			<%= flash[:notice] %>
		</p> 
		<% end %>
		<%= form_for :employee, @employee, :url => {:action=> 'search'}, :method=>:get, :remote=>true do |a|%>
		<label for="user_name">Search
			<%= image_tag("loader.gif",
			:align => "absmiddle",
			:border => 0,
			:id => "loader",
			:class =>"hidden" ) %> 
		</label>

		<%= text_field_tag("query", params['query']) %>
		
		<%= submit_tag "Search", :name=> nil %>
		</div>
		<div class="grid_4 omega">

		<div class="advanced-options-select"><%= a.collection_select :employee_department_id, EmployeeDepartment.all,:id, :name, {:prompt => 'Select department' } %></div>
		<div class="advanced-options-select"><%= a.collection_select :employee_category_id, EmployeeCategory.all,:id, :name, {:prompt => 'Select category' } %></div>
		<div class="advanced-options-select"><%= a.collection_select :employee_position_id, EmployeePosition.all,:id, :name, {:prompt => 'Select position' } %></div>
		<div class="advanced-options-select"><%= a.collection_select :employee_grade_id, EmployeeGrade.all,:id, :name, {:prompt => 'Select grade' } %></div>
		<div class="clearfix">&nbsp;</div>
			
		</div>	

		<%end%>
	</div>
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<h2>Employee Results</h2>
	<div id="information">
		<%= render(:partial=> "employee_preview", :locals => {:employees => @employees})%>
	</div>
</div>

