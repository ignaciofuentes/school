<%= content_for :breadcrumb do%>
<%= link_to 'Settings', :controller=>"configuration" %> &raquo; <%= link_to 'Courses', courses_path %> &raquo; <%= link_to @course.full_name, @course %> &raquo; Subjects
<% end %>


<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/courses.png" %>
	</div>
	<div class="grid_9">
		<h1>Subjects</h1>
	</div>
	<%= render :partial => 'shared/back_button' %>	
</div>

<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<% unless flash[:notice].nil? %>
	<p  class="flash-msg"> <%= flash[:notice] %> </p>
	<% end %>
	<div id="msg"></div>
	<div id="errors"></div>


	<div class="grid_3" id="menu_small">
		<h2>Options:</h2>
		<ul>
			<li>
				<%= link_to 'Add Normal Subject', nil, :class => "shower" %>
			</li>
		</ul>
	</div>

	<div class="grid_9">
		<h2>Subjects for <%= @course.full_name%>:</h2>
		<table class="medium" id="normal_subjects">	
			<thead>
				<tr>
					<th colspan="4">Sl.no</th>
				</tr>
			</thead>
			<tbody>

				<%= render @subjects %>
			</tbody>
		</table>	
	</div>
</div>

<div id="modal-box">	
	<%= render "new" %>
</div>


<div id="modal-box-edit">	

</div>



<% content_for :head do%>
<script type="text/javascript">
$(function() {
	$("#modal-box").modalBox("New Subject", "► Save Subject");
	$("#modal-box-edit").modalBox("Edit Subject", "► Save Subject");
	$(".shower").click(function (){
		$("#modal-box").dialog("open");
		return false;
	});
});
</script>
<%end%>