
<% if guardians.nil? or guardians.empty? %>
  <div id="no_result">No guardians found</div>
<% else %>
  <% guardians.each_with_index do |r, i| %>
    <div id="ajax_result">
      <% link_value = r.first_name + " " + r.last_name %>
      <%= link_to link_value, "#", {:class => "shower", :"data-guardian-id"=>r.id} %><br/>
      <small><br/>Unique id.<%= r.unique_id %></small> <%= @st.to_s %>
    </div>
    <%'<div class="extender"></div>' if i%4 == 3 %>
  <% end %>

<% end %>