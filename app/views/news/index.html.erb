<div class="container_12">
	<div class="grid_1">
		<%= image_tag "menu_icons/news.png" %>
	</div>
	<div class="grid_9">
		<h1>School News</h1>
		  <h3>Latest announcements</h3>
	</div>
	<%= render :partial => 'shared/back_button' %>	
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<div class="grid_4" id="menu_small">
		<h2>Options</h2>
		<ul>
			<li><%= link_to "View all", :action => "all" %></li>
			<li><%= link_to "Add new", :action => "create" %></li>
		</ul>
	</div>

	<div class="grid_8">
			<h2>Search</h2>
			<% unless flash[:notice].nil? %>
				<p class="flash-msg"> 
					<%= flash[:notice] %>
				</p> 
			<% end %>
		<%= form_for :users, :remote=>true, :method=>:get, :html=>{:name=>"search_form",:id=>"search_form", :style=>"display:inline;"} do %>
		
		<label for="query">Search news</label>
		<%= text_field_tag "query", params['query'], :autocomplete => 'off' %>

		<%= submit_tag "Search", :name=> nil %>

		<%end%>
	</div>
</div>
<div class="clearfix">&nbsp;</div>

<div class="container_12">
	<h2>News Results</h2>
	<div id="user_information"> 
		<%= render(:partial=> "news_preview", :locals => {:news => @news})%>
	</div>
</div>